<local:CWindow x:Class="ModCreator.Windows.HelperWindow"
        x:TypeArguments="localData:HelperWindowData"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ModCreator.Windows"
        xmlns:localData="clr-namespace:ModCreator.WindowData"
        xmlns:helper="clr-namespace:ModCreator.Helpers"
        xmlns:markdig="clr-namespace:Markdig.Wpf;assembly=Markdig.Wpf"
        mc:Ignorable="d"
        Title="{x:Static helper:UITextHelper.Help}" 
        Height="700" Width="1000"
        WindowStartupLocation="CenterScreen"
        Icon="/Resources/app-icon.png"
        FontFamily="Segoe UI">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#FF2E5090" Padding="15">
            <StackPanel>
                <TextBlock Text="{x:Static helper:UITextHelper.HelpTitle}" FontSize="24" FontWeight="Bold" Foreground="White"/>
                <TextBlock Text="{x:Static helper:UITextHelper.HelpSubtitle}" FontSize="12" Foreground="#FFCCCCCC" Margin="0,5,0,0"/>
            </StackPanel>
        </Border>

        <!-- Content -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Documentation List -->
            <Border Grid.Column="0" BorderBrush="#FFDDDDDD" BorderThickness="0,0,1,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" 
                               Text="{x:Static helper:UITextHelper.Topics}" 
                               FontSize="14" 
                               FontWeight="SemiBold"
                               Padding="15,10"
                               Background="#FFF5F5F5"/>

                    <ListBox Grid.Row="1" 
                             Name="lstDocs"
                             ItemsSource="{Binding DocItems, Mode=OneWay}"
                             SelectedItem="{Binding SelectedDoc, Mode=TwoWay}"
                             DisplayMemberPath="Title"
                             SelectionMode="Single"
                             BorderThickness="0"/>
                </Grid>
            </Border>

            <!-- Documentation Content -->
            <Grid Grid.Column="1" Background="White">
                <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="20">
                    <markdig:MarkdownViewer Markdown="{Binding DocContent, Mode=OneWay}"/>
                </ScrollViewer>
            </Grid>
        </Grid>
    </Grid>
</local:CWindow>
