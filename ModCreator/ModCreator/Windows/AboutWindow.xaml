<local:CWindow x:Class="ModCreator.Windows.AboutWindow"
        x:TypeArguments="localData:AboutWindowData"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ModCreator.Windows"
        xmlns:localData="clr-namespace:ModCreator.WindowData"
        xmlns:helper="clr-namespace:ModCreator.Helpers"
        mc:Ignorable="d"
        Title="{x:Static helper:MessageHelper.About}" 
        Height="400" Width="500"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Icon="/Resources/app-icon.png"
        FontFamily="Segoe UI">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#FF2E5090" Padding="20">
            <StackPanel HorizontalAlignment="Center">
                <TextBlock Text="{Binding AppName, Mode=OneWay}" 
                           FontSize="32" 
                           FontWeight="Bold" 
                           Foreground="White"
                           HorizontalAlignment="Center"/>
                <TextBlock FontSize="14" 
                           Foreground="#FFCCCCCC" 
                           HorizontalAlignment="Center"
                           Margin="0,5,0,0">
                    <Run Text="{x:Static helper:MessageHelper.Version}"/>
                    <Run Text=" "/>
                    <Run Text="{Binding Version, Mode=OneWay}" FontWeight="SemiBold"/>
                </TextBlock>
            </StackPanel>
        </Border>

        <!-- Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="30,20">
                <TextBlock Text="{Binding Description, Mode=OneWay}" 
                           TextWrapping="Wrap"
                           FontSize="13"
                           Margin="0,0,0,20"/>

                <StackPanel Orientation="Horizontal" Margin="0,10">
                    <TextBlock Text="{x:Static helper:MessageHelper.Author}" FontWeight="SemiBold" Width="100"/>
                    <TextBlock Text="{Binding Author, Mode=OneWay}"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0,10">
                    <TextBlock Text="{x:Static helper:MessageHelper.Repository}" FontWeight="SemiBold" Width="100"/>
                    <TextBlock>
                        <Hyperlink NavigateUri="{Binding Repository, Mode=OneWay}" RequestNavigate="Hyperlink_RequestNavigate">
                            <Run Text="{Binding Repository, Mode=OneWay}"/>
                        </Hyperlink>
                    </TextBlock>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0,10">
                    <TextBlock Text="{x:Static helper:MessageHelper.License}" FontWeight="SemiBold" Width="100"/>
                    <TextBlock Text="{Binding License, Mode=OneWay}"/>
                </StackPanel>

                <Border Background="#FFF5F5F5" 
                        Padding="15" 
                        Margin="0,20,0,0" 
                        CornerRadius="5">
                    <StackPanel>
                        <TextBlock Text="{x:Static helper:MessageHelper.Features}" 
                                   FontWeight="SemiBold" 
                                   Margin="0,0,0,10"/>
                        <TextBlock Text="{x:Static helper:MessageHelper.FeaturesList}" 
                                   TextWrapping="Wrap"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>

        <!-- Close Button -->
        <Border Grid.Row="2" Background="#FFF5F5F5" Padding="16" BorderBrush="#FFDDDDDD" BorderThickness="0,1,0,0">
            <Button Content="{x:Static helper:MessageHelper.Close}" 
                    Click="Close_Click" 
                    Style="{StaticResource ActionButton}"
                    Width="100"
                    HorizontalAlignment="Right"/>
        </Border>
    </Grid>
</local:CWindow>
