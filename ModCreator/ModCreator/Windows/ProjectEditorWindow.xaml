<local:CWindow x:Class="ModCreator.Windows.ProjectEditorWindow"
        x:TypeArguments="localData:ProjectEditorWindowData"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ModCreator.Windows"
        xmlns:localData="clr-namespace:ModCreator.WindowData"
        xmlns:helper="clr-namespace:ModCreator.Helpers"
        mc:Ignorable="d"
        Title="{x:Static helper:MessageHelper.ProjectEditorTitle}" 
        Height="700" Width="1200"
        WindowStartupLocation="CenterScreen"
        Icon="/Resources/app-icon.png"
        FontFamily="Segoe UI">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#FF2E5090" Padding="15" Margin="0" CornerRadius="0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBox Text="{Binding ProjectName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                             FontSize="20" 
                             FontWeight="Bold" 
                             Foreground="White"
                             Background="Transparent"
                             BorderBrush="White"
                             BorderThickness="0,0,0,1"
                             Padding="5,2"
                             CaretBrush="White"/>
                    <TextBlock FontSize="12" Foreground="#FFCCCCCC" Margin="0,5,0,0">
                        <Run Text="{x:Static helper:MessageHelper.ProjectIdLabel}"/>
                        <Run Text="{Binding Project.ProjectId, Mode=OneWay}" FontWeight="SemiBold"/>
                    </TextBlock>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                    <Button Content="{x:Static helper:MessageHelper.Save}" Click="Save_Click" 
                            Style="{StaticResource PrimaryButton}" Width="100"/>
                    <Button Content="{x:Static helper:MessageHelper.Cancel}" Click="Close_Click" 
                            Style="{StaticResource ActionButton}" Width="100" Margin="10,0,0,0"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Edit Mode Toggle -->
        <Border Grid.Row="1" Background="#FFF5F5F5" Padding="10" BorderBrush="#FFDDDDDD" BorderThickness="0,0,0,1">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="{x:Static helper:MessageHelper.EditModeLabel}" VerticalAlignment="Center" Margin="0,0,10,0" FontWeight="SemiBold"/>
                <RadioButton Content="{x:Static helper:MessageHelper.UIModeLabel}" 
                             IsChecked="{Binding IsUIMode, Mode=TwoWay}" 
                             GroupName="EditMode"
                             Margin="0,0,20,0"
                             VerticalAlignment="Center"/>
                <RadioButton Content="{x:Static helper:MessageHelper.CodeModeLabel}" 
                             IsChecked="{Binding IsCodeMode, Mode=TwoWay}" 
                             GroupName="EditMode"
                             VerticalAlignment="Center"/>
                <TextBlock Text="{x:Static helper:MessageHelper.CodeModeNote}" 
                           Foreground="Gray" 
                           FontSize="11" 
                           Margin="20,0,0,0"
                           VerticalAlignment="Center"/>
            </StackPanel>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="2" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- ModEvent List -->
            <GroupBox Grid.Column="0" Header="{x:Static helper:MessageHelper.ModEventsHeader}" Margin="0,0,10,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <ListBox Grid.Row="0" 
                             Name="lstModEvents"
                             ItemsSource="{Binding ModEvents, Mode=OneWay}"
                             SelectionMode="Single"
                             Margin="0,0,0,10"/>

                    <StackPanel Grid.Row="1">
                        <Button Content="{x:Static helper:MessageHelper.AddEvent}" 
                                Style="{StaticResource ActionButton}" 
                                Margin="0,0,0,5"
                                Background="#FF4CAF50" 
                                Foreground="White"/>
                        <Button Content="{x:Static helper:MessageHelper.EditEvent}" 
                                Style="{StaticResource ActionButton}"
                                Margin="0,0,0,5"/>
                        <Button Content="{x:Static helper:MessageHelper.RemoveEvent}" 
                                Style="{StaticResource ActionButton}"
                                Background="#FFFF5252" 
                                Foreground="White"/>
                    </StackPanel>
                </Grid>
            </GroupBox>

            <!-- Editor Panel -->
            <GroupBox Grid.Column="1" Header="{x:Static helper:MessageHelper.EventEditorHeader}">
                <Grid>
                    <!-- UI Mode Panel -->
                    <StackPanel Visibility="{Binding IsUIMode, Converter={StaticResource BoolToVisibilityConverter}}">
                        <TextBlock Text="{x:Static helper:MessageHelper.UIModeEditorTitle}" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>
                        <TextBlock Text="{x:Static helper:MessageHelper.UIModeEditorSubtitle}" 
                                   Foreground="Gray" 
                                   TextWrapping="Wrap"
                                   Margin="0,0,0,20"/>
                        <TextBlock Text="{x:Static helper:MessageHelper.FeatureComingSoon}" 
                                   Foreground="Gray" 
                                   FontStyle="Italic"/>
                    </StackPanel>

                    <!-- Code Mode Panel -->
                    <StackPanel Visibility="{Binding IsCodeMode, Converter={StaticResource BoolToVisibilityConverter}}">
                        <TextBlock Text="{x:Static helper:MessageHelper.CodeModeEditorTitle}" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>
                        <TextBlock Text="{x:Static helper:MessageHelper.CodeModeEditorSubtitle}" 
                                   Foreground="Gray" 
                                   TextWrapping="Wrap"
                                   Margin="0,0,0,20"/>
                        <TextBox Style="{StaticResource MultilineTextBox}" 
                                 Height="400"
                                 FontFamily="Consolas"
                                 Text="{x:Static helper:MessageHelper.CodeEditorPlaceholder}"/>
                    </StackPanel>
                </Grid>
            </GroupBox>
        </Grid>

        <!-- Status Bar -->
        <Border Grid.Row="3" Background="#FFF0F0F0" Padding="10,5" BorderBrush="#FFDDDDDD" BorderThickness="0,1,0,0">
            <TextBlock Text="{Binding Project.ProjectPath, Mode=OneWay}" FontSize="11" Foreground="Gray"/>
        </Border>
    </Grid>
</local:CWindow>
