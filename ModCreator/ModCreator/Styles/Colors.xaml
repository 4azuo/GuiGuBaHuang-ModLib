<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Primary Colors -->
    <SolidColorBrush x:Key="PrimaryColor" Color="#FF2E5090"/>
    <SolidColorBrush x:Key="PrimaryLightColor" Color="#FFCCCCCC"/>
    <SolidColorBrush x:Key="PrimaryDarkColor" Color="#FF1A3050"/>
    
    <!-- Status Colors -->
    <SolidColorBrush x:Key="SuccessColor" Color="#FF4CAF50"/>
    <SolidColorBrush x:Key="WarningColor" Color="#FFFFC107"/>
    <SolidColorBrush x:Key="DangerColor" Color="#FFFF5252"/>
    <SolidColorBrush x:Key="InfoColor" Color="#FF2196F3"/>
    
    <!-- Background Colors -->
    <SolidColorBrush x:Key="BackgroundColor" Color="#FFF0F0F0"/>
    <SolidColorBrush x:Key="AlternateRowColor" Color="#FFF5F5F5"/>
    <SolidColorBrush x:Key="WhiteColor" Color="White"/>
    
    <!-- Text Colors -->
    <SolidColorBrush x:Key="TextColor" Color="#FF333333"/>
    <SolidColorBrush x:Key="TextMutedColor" Color="Gray"/>
    <SolidColorBrush x:Key="TextLightColor" Color="White"/>

</ResourceDictionary>
