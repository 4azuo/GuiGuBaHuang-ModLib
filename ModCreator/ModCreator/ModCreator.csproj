<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net9.0-windows</TargetFramework>
    <UseWPF>true</UseWPF>
    <Nullable>disable</Nullable>
    <AssemblyName>ModCreator</AssemblyName>
    <RootNamespace>ModCreator</RootNamespace>
    <Version>1.0.0</Version>
    
    <!-- Disable WPF Designer -->
    <UseWpfDesigner>false</UseWpfDesigner>
    
    <!-- Disable auto-generated assembly info to avoid conflicts -->
    <GenerateAssemblyInfo>false</GenerateAssemblyInfo>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="AvalonEdit" Version="6.3.0.90" />
    <PackageReference Include="Markdig.Wpf" Version="0.5.0.1" />
    <PackageReference Include="Newtonsoft.Json" Version="13.0.3" />
    <PackageReference Include="System.Configuration.ConfigurationManager" Version="9.0.0" />
  </ItemGroup>

  <ItemGroup>
    <FrameworkReference Include="Microsoft.WindowsDesktop.App.WindowsForms" />
  </ItemGroup>

  <ItemGroup>
    <Resource Include="Resources\app-icon.png" />
  </ItemGroup>

  <ItemGroup>
    <None Update="Resources\messages.json">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
    <None Update="Resources\settings.json">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
  </ItemGroup>

  <ItemGroup>
    <!-- Exclude template project from compilation but include as content to copy -->
    <Compile Remove="Resources\ModProject_0hKMNX\**" />
    <EmbeddedResource Remove="Resources\ModProject_0hKMNX\**" />
    <Page Remove="Resources\ModProject_0hKMNX\**" />
    
    <!-- Copy template project to output directory -->
    <None Include="Resources\ModProject_0hKMNX\**\*.*">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
      <Link>Resources\ModProject_0hKMNX\%(RecursiveDir)%(FileName)%(Extension)</Link>
    </None>
  </ItemGroup>

  <ItemGroup>
    <None Remove="Resources\embeded-settings.json" />
    <None Remove="Resources\var-types.json" />
    <None Remove="Resources\new-project-replacements.json" />
    <None Remove="Resources\image-extensions.json" />
    <None Remove="Styles\Json.xshd" />
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Include="Resources\embeded-settings.json">
      <CopyToOutputDirectory>Never</CopyToOutputDirectory>
    </EmbeddedResource>
    <EmbeddedResource Include="Resources\var-types.json">
      <CopyToOutputDirectory>Never</CopyToOutputDirectory>
    </EmbeddedResource>
    <EmbeddedResource Include="Resources\new-project-replacements.json">
      <CopyToOutputDirectory>Never</CopyToOutputDirectory>
    </EmbeddedResource>
    <EmbeddedResource Include="Resources\image-extensions.json">
      <CopyToOutputDirectory>Never</CopyToOutputDirectory>
    </EmbeddedResource>
    <EmbeddedResource Include="Styles\Json.xshd">
      <CopyToOutputDirectory>Never</CopyToOutputDirectory>
    </EmbeddedResource>
  </ItemGroup>

</Project>
