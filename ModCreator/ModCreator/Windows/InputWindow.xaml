<local:CWindow x:Class="ModCreator.Windows.InputWindow"
        x:TypeArguments="localData:InputWindowData"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ModCreator.Windows"
        xmlns:localData="clr-namespace:ModCreator.WindowData"
        mc:Ignorable="d"
        Title="{Binding WindowTitle}" 
        Height="200" Width="500"
        WindowStartupLocation="CenterOwner"
        Icon="/Resources/app-icon.png"
        FontFamily="Segoe UI"
        ResizeMode="NoResize">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#FF2E5090" Padding="15">
            <TextBlock Text="{Binding WindowTitle}" 
                       FontSize="16" 
                       FontWeight="Bold" 
                       Foreground="White"/>
        </Border>

        <!-- Input Field -->
        <Grid Grid.Row="1" Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="10"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0"
                       Text="{Binding Label}"
                       FontSize="13"
                       FontWeight="SemiBold"/>

            <TextBox Grid.Row="2"
                     Name="txtInput"
                     Text="{Binding InputValue, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                     Height="32"
                     VerticalContentAlignment="Center"
                     Padding="8,0"
                     FontSize="13"
                     Background="White"
                     Foreground="Black"
                     BorderBrush="#FFCCCCCC"
                     BorderThickness="1"/>
        </Grid>

        <!-- Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="15">
            <Button Content="OK" 
                    Click="OK_Click"
                    Style="{StaticResource PrimaryButton}" 
                    Width="100"
                    IsDefault="True"/>
            <Button Content="Cancel" 
                    Click="Cancel_Click"
                    Style="{StaticResource ActionButton}" 
                    Width="100"
                    Margin="10,0,0,0"
                    IsCancel="True"/>
        </StackPanel>
    </Grid>
</local:CWindow>
