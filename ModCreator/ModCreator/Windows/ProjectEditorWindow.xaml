<local:CWindow x:Class="ModCreator.Windows.ProjectEditorWindow"
        x:TypeArguments="localData:ProjectEditorWindowData"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ModCreator.Windows"
        xmlns:localData="clr-namespace:ModCreator.WindowData"
        xmlns:helper="clr-namespace:ModCreator.Helpers"
        mc:Ignorable="d"
        Title="{x:Static helper:UITextHelper.ProjectEditorTitle}" 
        Height="700" Width="1200"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized"
        Icon="/Resources/app-icon.png"
        FontFamily="Segoe UI">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#FF2E5090" Padding="15" Margin="0" CornerRadius="0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBox Text="{Binding ProjectName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                             FontSize="20" 
                             FontWeight="Bold" 
                             Foreground="White"
                             Background="Transparent"
                             BorderBrush="White"
                             BorderThickness="0,0,0,1"
                             Padding="5,2"
                             CaretBrush="White"/>
                    <TextBlock FontSize="12" Foreground="#FFCCCCCC" Margin="0,5,0,0">
                        <Run Text="{x:Static helper:UITextHelper.ProjectIdLabel}"/>
                        <Run Text="{Binding Project.ProjectId, Mode=OneWay}" FontWeight="SemiBold"/>
                    </TextBlock>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                    <Button Content="{x:Static helper:UITextHelper.Save}" Click="Save_Click" 
                            Style="{StaticResource PrimaryButton}" Width="100"/>
                    <Button Content="{x:Static helper:UITextHelper.Cancel}" Click="Close_Click" 
                            Style="{StaticResource ActionButton}" Width="100" Margin="10,0,0,0"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Tab Control -->
        <TabControl Grid.Row="1" Margin="10">
            <!-- Tab 1: Project Info -->
            <TabItem Header="{x:Static helper:UITextHelper.TabProjectInfo}">
                <Grid Margin="10">
                    <TextBlock Text="{x:Static helper:UITextHelper.FeatureComingSoon}" 
                               Foreground="Gray" 
                               FontStyle="Italic"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"/>
                </Grid>
            </TabItem>

            <!-- Tab 2: ModConf -->
            <TabItem Header="{x:Static helper:UITextHelper.TabModConf}">
                <Grid Margin="10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="300"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Conf List -->
                    <GroupBox Grid.Column="0" Header="{x:Static helper:UITextHelper.ConfFiles}" Margin="0,0,10,0">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <ListBox Grid.Row="0" 
                                     Name="lstConfFiles"
                                     ItemsSource="{Binding ConfFiles, Mode=OneWay}"
                                     SelectedItem="{Binding SelectedConfFile, Mode=TwoWay}"
                                     SelectionMode="Single"
                                     Margin="0,0,0,10"/>

                            <StackPanel Grid.Row="1">
                                <Button Content="{x:Static helper:UITextHelper.AddConf}" 
                                        Click="AddConf_Click"
                                        Style="{StaticResource ActionButton}" 
                                        Margin="0,0,0,5"
                                        Background="#FF4CAF50" 
                                        Foreground="White"/>
                                <Button Content="{x:Static helper:UITextHelper.RemoveConf}" 
                                        Click="RemoveConf_Click"
                                        Style="{StaticResource ActionButton}"
                                        Background="#FFFF5252" 
                                        Foreground="White"
                                        IsEnabled="{Binding HasSelectedConfFile, Mode=OneWay}"/>
                            </StackPanel>
                        </Grid>
                    </GroupBox>

                    <!-- JSON Editor -->
                    <GroupBox Grid.Column="1" Header="{x:Static helper:UITextHelper.JsonEditor}">
                        <TextBox Text="{Binding SelectedConfContent, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                 Style="{StaticResource MultilineTextBox}"
                                 FontFamily="Consolas"
                                 IsEnabled="{Binding HasSelectedConfFile, Mode=OneWay}"
                                 AcceptsReturn="True"
                                 AcceptsTab="True"
                                 VerticalScrollBarVisibility="Auto"
                                 HorizontalScrollBarVisibility="Auto"/>
                    </GroupBox>
                </Grid>
            </TabItem>

            <!-- Tab 3: ModImg -->
            <TabItem Header="{x:Static helper:UITextHelper.TabModImg}">
                <Grid Margin="10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="300"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Image List -->
                    <GroupBox Grid.Column="0" Header="{x:Static helper:UITextHelper.ImageFiles}" Margin="0,0,10,0">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <ListBox Grid.Row="0" 
                                     Name="lstImageFiles"
                                     ItemsSource="{Binding ImageFiles, Mode=OneWay}"
                                     SelectedItem="{Binding SelectedImageFile, Mode=TwoWay}"
                                     SelectionMode="Single"
                                     Margin="0,0,0,10"/>

                            <StackPanel Grid.Row="1">
                                <Button Content="{x:Static helper:UITextHelper.ImportImage}" 
                                        Click="ImportImage_Click"
                                        Style="{StaticResource ActionButton}" 
                                        Margin="0,0,0,5"
                                        Background="#FF4CAF50" 
                                        Foreground="White"/>
                                <Button Content="{x:Static helper:UITextHelper.ExportImage}" 
                                        Click="ExportImage_Click"
                                        Style="{StaticResource ActionButton}"
                                        Margin="0,0,0,5"
                                        IsEnabled="{Binding HasSelectedImageFile, Mode=OneWay}"/>
                                <Button Content="{x:Static helper:UITextHelper.RemoveImage}" 
                                        Click="RemoveImage_Click"
                                        Style="{StaticResource ActionButton}"
                                        Background="#FFFF5252" 
                                        Foreground="White"
                                        IsEnabled="{Binding HasSelectedImageFile, Mode=OneWay}"/>
                            </StackPanel>
                        </Grid>
                    </GroupBox>

                    <!-- Image Preview -->
                    <GroupBox Grid.Column="1" Header="{x:Static helper:UITextHelper.ImagePreview}">
                        <Image Source="{Binding SelectedImagePath, Mode=OneWay}"
                               Stretch="Uniform"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"/>
                    </GroupBox>
                </Grid>
            </TabItem>

            <!-- Tab 4: Global Variables -->
            <TabItem Header="{x:Static helper:UITextHelper.TabGlobalVariables}">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <DataGrid Grid.Row="0" 
                              ItemsSource="{Binding GlobalVariables, Mode=TwoWay}"
                              AutoGenerateColumns="False"
                              CanUserAddRows="True"
                              CanUserDeleteRows="True"
                              SelectionMode="Single"
                              Margin="0,0,0,10">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="{x:Static helper:UITextHelper.VariableName}" 
                                                Binding="{Binding Name, Mode=TwoWay}" 
                                                Width="200"/>
                            <DataGridTextColumn Header="{x:Static helper:UITextHelper.VariableType}" 
                                                Binding="{Binding Type, Mode=TwoWay}" 
                                                Width="150"/>
                            <DataGridTextColumn Header="{x:Static helper:UITextHelper.VariableValue}" 
                                                Binding="{Binding Value, Mode=TwoWay}" 
                                                Width="*"/>
                            <DataGridTextColumn Header="{x:Static helper:UITextHelper.VariableDescription}" 
                                                Binding="{Binding Description, Mode=TwoWay}" 
                                                Width="300"/>
                        </DataGrid.Columns>
                    </DataGrid>

                    <StackPanel Grid.Row="1" Orientation="Horizontal">
                        <Button Content="{x:Static helper:UITextHelper.GenerateCode}" 
                                Click="GenerateVariablesCode_Click"
                                Style="{StaticResource PrimaryButton}"
                                Margin="0,0,10,0"/>
                        <TextBlock Text="{x:Static helper:UITextHelper.GenerateCodeNote}" 
                                   VerticalAlignment="Center"
                                   Foreground="Gray"
                                   FontSize="11"/>
                    </StackPanel>
                </Grid>
            </TabItem>

            <!-- Tab 5: ModEvent -->
            <TabItem Header="{x:Static helper:UITextHelper.TabModEvent}">
                <Grid Margin="10">
                    <TextBlock Text="{x:Static helper:UITextHelper.FeatureComingSoon}" 
                               Foreground="Gray" 
                               FontStyle="Italic"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"/>
                </Grid>
            </TabItem>
        </TabControl>

        <!-- Status Bar -->
        <Border Grid.Row="2" Background="#FFF0F0F0" Padding="10,5" BorderBrush="#FFDDDDDD" BorderThickness="0,1,0,0">
            <TextBlock Text="{Binding Project.ProjectPath, Mode=OneWay}" FontSize="11" Foreground="Gray"/>
        </Border>
    </Grid>
</local:CWindow>
